 ============================================================================
 b-Entrada/salida
Pedir el sueldo al usuario. Sumarle un 10% e informarle cuál será su sueldo con aumento.
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float sueldo;

	printf("Por favor ingrese su sueldo: ");
	scanf("%f", &sueldo);

	sueldo = sueldo * 1.10;

	puts("El sueldo con un 10% aumento es %.1f", sueldo); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}
